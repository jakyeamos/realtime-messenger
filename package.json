{
  "name": "messenger-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "db:generate": "pnpm --filter server db:generate",
    "db:migrate": "pnpm --filter server db:migrate",
    "db:seed": "pnpm --filter server db:seed",
    "db:studio": "pnpm --filter server db:studio",
    "build": "pnpm run --parallel build",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "jsdom": "^27.3.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
